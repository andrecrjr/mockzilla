{
	"openapi": "3.0.0",
	"info": {
		"title": "Pet Store API",
		"version": "1.0.0",
		"description": "A sample API for testing OpenAPI import."
	},
	"paths": {
		"/pets": {
			"get": {
				"operationId": "listPets",
				"responses": {
					"200": {
						"description": "A list of pets",
						"content": {
							"application/json": {
								"schema": {
									"type": "array",
									"items": {
										"type": "object",
										"properties": {
											"id": { "type": "integer", "format": "int64" },
											"name": { "type": "string" },
											"tag": { "type": "string" }
										},
										"required": ["id", "name"]
									}
								}
							}
						}
					}
				}
			},
			"post": {
				"operationId": "createPet",
				"responses": {
					"201": {
						"description": "Null response"
					}
				}
			}
		},
		"/pets/{petId}": {
			"get": {
				"operationId": "showPetById",
				"responses": {
					"200": {
						"description": "Expected response to a valid request",
						"content": {
							"application/json": {
								"schema": {
									"type": "object",
									"properties": {
										"id": { "type": "integer", "format": "int64" },
										"name": { "type": "string" },
										"tag": { "type": "string" }
									},
									"required": ["id", "name"]
								}
							}
						}
					}
				}
			}
		}
	}
}
